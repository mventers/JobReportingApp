<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <img src="~/Images/header-bg.gif" />
                <div class="float-left">
                    <p class="site-title"></p>
                </div>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Jobs List", "Index", "Jobs")</li>
                            <li>@Html.ActionLink("Job Search", "SearchIndex", "Jobs")</li>
                            <li>@Html.ActionLink("Create Job", "Create", "Jobs")</li>
                        </ul>
                    </nav>
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
                    <p>&copy; @DateTime.Now.Year - Metropolitan Appliance</p>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
